<h1>日記一覧</h1>

<%= link_to '新しい日記を追加', new_baby_diary_path(@baby) %>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>内容</th>
      <th>写真</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.entry_date %></td>
        <td><%= diary.content %></td>
        <td><%= image_tag diary.photo.url, class: "diary-photo" if diary.photo.present? %></td>
        <td>
          <%= link_to '表示', baby_diary_path(@baby, diary) %>
          <%= link_to '編集', edit_baby_diary_path(@baby, diary) %>
          <%= link_to '削除', baby_diary_path(@baby, diary), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
